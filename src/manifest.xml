<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>LoginRadius Social Login and Social Share</name>
    <license>Open Source License, GPL v2 based</license>
    <author>LoginRadius</author>
    <authorEmail>developers@loginradius.com</authorEmail>
    <authorUrl>http://www.loginradius.com</authorUrl>
    <creationDate>2015-Nov-18</creationDate>
    <copyright>2013, LoginRadius</copyright>
    <version>4.0</version>
    <description></description>

    <!-- Installation -->	
    <scriptfile>install/script_loginradiussocialloginandsocialshare.php</scriptfile>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">install/install.mysql.utf8.sql</file>
        </sql>
    </install>
	
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">install/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <update>
        <schemas>
            <schemapath type="mysql">sql/updates</schemapath>
        </schemas>
    </update>
    <updateservers>
        <server type="extension" priority="1" name="LoginRadius Social Login and Social Share Updates">http://update.loginradius.com/joomla/update.xml</server>
    </updateservers>
    <!-- Component -->
    <files folder="site">				
        <filename>index.html</filename>
        <filename>edit.xml</filename>
        <filename>metadata.xml</filename>
        <filename>loginradiussocialloginandsocialshare.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>controllers</folder>
        <folder>models</folder>
        <folder>helpers</folder>		
    </files>
    <media destination="com_loginradiussocialloginandsocialshare" folder="media">
        <filename>index.html</filename>
        <folder>images</folder>
    </media>
	
    <!-- Administration -->
    <administration>
        <menu img="../media/com_loginradiussocialloginandsocialshare/images/favicon.png">COM_SOCIALLOGINANDSOCIALSHARE</menu>
        <files folder="admin">
            <folder>assets</folder>
            <folder>install</folder>
            <folder>models</folder>
            <folder>views</folder>
            <folder>sql</folder>
            <file>index.html</file>
            <file>controller.php</file>
            <file>loginradiussocialloginandsocialshare.php</file>
        </files>
        <languages folder="admin/language">
            <language tag="en-GB">en-GB/en-GB.com_loginradiussocialloginandsocialshare.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_loginradiussocialloginandsocialshare.sys.ini</language>
        </languages>
    </administration>	
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.com_loginradiussocialloginandsocialshare.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_sociallogin.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_sociallogin.sys.ini</language>
    </languages>
	
    <!-- Modules -->
    <modules>
        <module module="mod_sociallogin" title="Module - Social Login" position="position-7" order="8" client="site" language="*" showtitle="0">
            <files folder="mod_sociallogin">
                <filename>mod_sociallogin.xml</filename>
                <filename module="mod_sociallogin">mod_sociallogin.php</filename>
                <filename module="mod_sociallogin">helper.php</filename>
                <filename module="mod_sociallogin">LoginRadiusSDK.2.0.0.js</filename>
                <filename module="mod_sociallogin">index.html</filename>
                <filename module="mod_sociallogin">tmpl/default.php</filename>
                <filename module="mod_sociallogin">tmpl/index.html</filename>
            </files>
        </module>
    </modules>	
	
    <!-- Plugins -->
    <plugins>
        <plugin plugin="sociallogin" title="System - Social Login" order="-100" group="system">
            <files folder="plg_sociallogin">
                <file plugin="sociallogin">sociallogin.php</file>
                <file>LoginRadius.php</file>
                <folder>assets</folder>
                <folder>helper</folder>
                <file>index.html</file>
                <file>sociallogin.xml</file>				
            </files>
        </plugin>
        <plugin plugin="socialshare" title="Content - Social Share" order="-100" group="content">
            <files folder="plg_socialshare">
                <file plugin="socialshare">socialshare.php</file>
                <file>socialshare.xml</file>
                <file>socialshare.js</file>	
                <file>index.html</file>				
            </files>
        </plugin>
    </plugins>	
</extension>