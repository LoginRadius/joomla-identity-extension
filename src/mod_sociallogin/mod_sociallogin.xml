<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
    <name>Module - Social Login</name>
    <author>LoginRadius</author>
    <authorEmail>developers@loginradius.com</authorEmail>
    <authorUrl>www.LoginRadius.com</authorUrl>
    <creationDate>2015-Nov-18</creationDate>
    <copyright>2013, LoginRadius</copyright>
    <license>GNU/GPL</license>
    <version>4.0</version>
    <description>LoginRadius enables social login interface for your joomla websites.</description>
    <files>
        <filename module="mod_sociallogin">mod_sociallogin.php</filename>
        <filename module="mod_sociallogin">helper.php</filename>
        <filename module="mod_sociallogin">LoginRadiusSDK.2.0.0.js</filename>
        <filename module="mod_sociallogin">index.html</filename>
        <filename module="mod_sociallogin">tmpl/default.php</filename>
        <filename module="mod_sociallogin">tmpl/index.html</filename>
    </files>
    <help key="JHELP_EXTENSIONS_MODULE_MANAGER_LOGIN"/>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="pretext" type="textarea" filter="safehtml" cols="30" rows="2" label="MOD_LOGINRADIUS_FIELD_PRE_TEXT_LABEL" description="MOD_LOGINRADIUS_FIELD_PRE_TEXT_DESC"/>
                <field name="posttext" type="textarea" filter="safehtml" cols="30" rows="2" label="MOD_LOGINRADIUS_FIELD_POST_TEXT_LABEL" description="MOD_LOGINRADIUS_FIELD_POST_TEXT_DESC"/>
                <field name="login" type="menuitem" disable="separator" label="MOD_LOGINRADIUS_FIELD_LOGIN_REDIRECTURL_LABEL" description="MOD_LOGINRADIUS_FIELD_LOGIN_REDIRECTURL_DESC">
                    <option value="">JDEFAULT</option>
                </field>
                <field name="logout" type="menuitem" disable="separator" label="MOD_LOGINRADIUS_FIELD_LOGOUT_REDIRECTURL_LABEL" description="MOD_LOGINRADIUS_FIELD_LOGOUT_REDIRECTURL_DESC">
                    <option value="">JDEFAULT</option>
                </field>
                <field name="usesecure" type="radio" default="0" label="MOD_LOGINRADIUS_FIELD_USESECURE_LABEL" description="MOD_LOGINRADIUS_FIELD_USESECURE_DESC">
                    <option value="0">JNo</option>
                    <option value="1">JYes</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
                <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
                <field name="cache" type="list" default="0" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>